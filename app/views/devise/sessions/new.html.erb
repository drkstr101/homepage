<% content_for :header do %>
  Log in to your account
<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'space-y-6'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium leading-6 text-neutral-900" %>
    <div class="mt-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-neutral-900 shadow-sm ring-1 ring-inset ring-neutral-300 placeholder:text-neutral-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :password, class: 'block text-sm font-medium leading-6 text-neutral-900' %>
    <div class="mt-2">
      <%= f.password_field :password, autocomplete: "current-password", class: 'block w-full rounded-md border-0 py-1.5 text-neutral-900 shadow-sm ring-1 ring-inset ring-neutral-300 placeholder:text-neutral-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6' %>
    </div>
  </div>
  <div class="flex items-center justify-between">
    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: 'h-4 w-4 cursor-pointer rounded border-neutral-300 text-primary-600 focus:ring-primary-600' %>
        <%= f.label :remember_me, class: 'ml-3 block text-sm leading-6 text-neutral-900' %>
      </div>
    <% end %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'ml-2 font-semibold leading-6 text-primary-600 hover:text-primary-500  focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 focus-visible:rounded-md' %>
    <% end %>
  </div>
  <div>
    <%= f.submit "Sign in", class: 'flex w-full cursor-pointer justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
