<% content_for :header do %>
  Forgot your password?
<% end %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'space-y-6' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: 'block text-sm font-medium leading-6 text-neutral-900' %>
    <div class="mt-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-neutral-900 shadow-sm ring-1 ring-inset ring-neutral-300 placeholder:text-neutral-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'flex w-full cursor-pointer justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
